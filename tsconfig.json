{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022", "esnext.asynciterable"],
		"allowJs": false,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strict": true,
		"noImplicitReturns": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"newLine": "LF",
		"typeRoots": ["./node_modules/@types", "./server/common/typings"],
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"declarationMap": true,
		"noUnusedParameters": false,
		"noEmit": false,
		"declaration": true,
		"module": "nodenext",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"references": [
		{ "path": "./ts-api-extras" },
		{ "path": "./i18n-api" },
		{ "path": "./backend" },
		{ "path": "./frontend" },
		{ "path": "./i18n-static-analysis" },
		{ "path": "./frontend-lib" },
		{ "path": "./i18n-cli" },
		{ "path": "./eslint-plugin-i18n" },
		{ "path": "./vscode-extension" }
	],
	"include": [],
	"exclude": ["**/node_modules"],
	"ts-node": {
		"swc": true
	}
}
